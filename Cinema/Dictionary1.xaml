<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BorderStyle" TargetType="Border">
       
        <Setter Property="CornerRadius" Value="15" ></Setter>
        <Setter Property="Margin" Value="5,8" ></Setter>
        <Setter Property="Width" Value="30" ></Setter>
        <Setter Property="Height" Value="30" ></Setter>
        <Setter Property="Background" Value="LightGray" ></Setter>
       
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value = "True">
                <Setter Property="Background" Value = "Green" />
            </Trigger>
        </Style.Triggers>

    </Style>
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">        
        <Setter Property="Padding" Value="20,5,0,0"></Setter>
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
        <Setter Property="Foreground" Value="DarkSlateGray"></Setter>
    </Style>
    <Style x:Key="BorderStyle2" TargetType="Border">
        <Setter Property="Margin" Value="5,5,0,0"></Setter>
        <Setter Property="Height"  Value="15"></Setter>
        <Setter Property="Width"  Value="30"></Setter>
        <Setter Property="CornerRadius" Value="8"></Setter>
    </Style>
    <Style x:Key="ComboboxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="DarkSlateGray"></Setter>
        <Setter Property="Height"  Value="40"></Setter>
        <Setter Property="Width"  Value="220"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
    </Style>
</ResourceDictionary>