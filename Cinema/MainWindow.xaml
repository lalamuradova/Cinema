                    <ComboBoxItem Content="4,Sentyabr,2021"></ComboBoxItem>
                    <ComboBoxItem Content="5,Sentyabr,2021"></ComboBoxItem>
                </ComboBox>
                <ComboBox Foreground="DarkSlateGray"  Canvas.Top="60" Canvas.Right="20"  Width="220" Height="40" x:Name="TimeCombobox" FontSize="18" >
