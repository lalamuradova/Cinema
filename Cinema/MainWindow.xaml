                    </Border>
                    <Border MouseDown="Border_MouseDown"  Style="{StaticResource BorderStyle}" >
                        <TextBlock Foreground="Transparent">A,8</TextBlock>
                    </Border>

                </WrapPanel>
                <UniformGrid Name="panelB"  Height="230" Width="240" Margin="30,100,0,0" >
                    <Border MouseDown="Border_MouseDown"  Style="{StaticResource BorderStyle}" >
