                <ComboBox Foreground="DarkSlateGray" Canvas.Left="10" Canvas.Top="10"  Width="220" Height="40" x:Name="MallCombobox" FontSize="18" >                    
                    <ComboBoxItem Content="Metro Park" IsSelected="True"></ComboBoxItem>
                    <ComboBoxItem Content="Park cinema"></ComboBoxItem>
                    <ComboBoxItem Content="28 cinema"></ComboBoxItem>
                </ComboBox>
                <ComboBox Foreground="DarkSlateGray"  Canvas.Top="10" Canvas.Right="20"  Width="220" Height="40" x:Name="FilmTypeCombobox" FontSize="18" >
                    <ComboBoxItem Content="IMAX,3D" IsSelected="True"></ComboBoxItem>
                    <ComboBoxItem Content="2D"></ComboBoxItem>
                    <ComboBoxItem Content="4D"></ComboBoxItem>
                </ComboBox>
                <ComboBox Foreground="DarkSlateGray" Canvas.Left="10" Canvas.Top="60"  Width="220" Height="40" x:Name="DateCombobox" FontSize="18" >
