                <Image  Canvas.Top="0" Canvas.Left="0" Width="495" Stretch="Fill" Height="200" Source="/icons/image1.jpg"   x:Name="BackroundImage" ></Image>
            <StackPanel Canvas.Right="10"  Height="30"  Orientation="Horizontal">
                <TextBox Opacity="0.3"   BorderBrush="Transparent" Background="White" Name="SearchTxtBox"  Foreground="DarkSlateGray" FontSize="16" Width="440" Height="50"  ></TextBox>
               <Image Source="/icons/search.png" Width="50" />               
            </StackPanel>
                <StackPanel Canvas.Top="200" Canvas.Left="165" Width="330" Height="120">
                    <TextBlock x:Name="TitleTextBlock" Padding="20,10,0,0" FontSize="20" FontWeight="Bold" >Interstellar</TextBlock>
                    <TextBlock x:Name="GenreTxtBlock" Padding="20,10,0,0" FontSize="12" FontWeight="SemiBold" Foreground="DarkSlateGray" >Action | Adventure | Fantasy </TextBlock>
                    <TextBlock x:Name="YearTxtBlock" Padding="20,10,0,0" FontSize="12" FontWeight="SemiBold" Foreground="DarkSlateGray" > 27 May 2016 USA <TextBlock x:Name="timeTxtBlock" Foreground="LightSlateGray" >2h 24 min</TextBlock></TextBlock>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal" >
                        <TextBlock Padding="20,5,0,0" FontSize="12" FontWeight="SemiBold" Foreground="LightSlateGray" >7.5 / 10</TextBlock>
                        <Border Margin="5,5,0,0" Height="15" Width="30" Background="Orange" CornerRadius="8" ></Border>
                        <Border Margin="5,5,0,0" Height="15" Width="30" Background="DeepSkyBlue" CornerRadius="8" ></Border>
                        <Border Margin="5,5,0,0" Height="15" Width="30" Background="SpringGreen" CornerRadius="8" ></Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Canvas.Top="310"  Width="495" Height="65" >
                    <TextBlock  Padding="20,4,0,0" FontSize="16" 
                               FontWeight="SemiBold" Foreground="Black" >
                        Director: 
                        <TextBlock FontSize="16" FontWeight="Normal" Foreground="Black" >
                            Brayn Singer</TextBlock></TextBlock>

                    <TextBlock  Padding="20,0,0,0" FontSize="16" 
                               FontWeight="SemiBold" Foreground="Black" >
                        Writer: 
                        <TextBlock FontSize="16" FontWeight="Normal" Foreground="Black" >
                            Writers</TextBlock></TextBlock>
                </StackPanel>
            </Canvas>
        </Grid>
        <Grid Grid.Row="1">
